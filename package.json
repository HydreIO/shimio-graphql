{
  "name": "@hydre/shimio-graphql",
  "version": "6.0.0",
  "description": "A GraphQL server and client built on Shimio",
  "type": "module",
  "main": "src/serve.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "test": "node test/index.test.js",
    "coverage": "c8 --check-coverage node test/index.test.js",
    "lint": "prettier-eslint $PWD/\"**/*.js\" --print-width 80 --list-different && eslint --color .",
    "format": "prettier-eslint $PWD/\"**/*.js\" --print-width 80 --write",
    "postversion": "git push && git push --tags",
    "example:server": "node example/server/index.js",
    "example:client": "node example/client/index.js"
  },
  "exports": {
    "./query": "./src/query.js",
    "./serve": "./src/serve.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hydreio/shimio-graphql.git"
  },
  "author": "Hydre",
  "license": "UNLICENSE",
  "bugs": {
    "url": "https://github.com/hydreio/shimio-graphql/issues"
  },
  "keywords": [
    "graphql",
    "shimio",
    "server",
    "client"
  ],
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/hydreio/shimio-graphql#readme",
  "dependencies": {
    "@hydre/graphql-batch-executor": "^3.1.3",
    "folktale": "^2.3.2",
    "graphql": "^16.9.0"
  },
  "devDependencies": {
    "@hydre/doubt": "^7.1.0",
    "@hydre/shimio": "file:../shimio",
    "@sidy/eslint-config-sidy": "^1.4.15",
    "c8": "^10.1.3",
    "casual": "^1.6.2",
    "eslint": "^9.17.0",
    "eslint-plugin-unicorn": "^56.0.1",
    "koa": "^2.15.3",
    "prettier": "^3.4.2",
    "supports-color": "^9.4.0",
    "tap-spec-emoji": "^6.1.2",
    "ws": "^8.18.0"
  }
}
